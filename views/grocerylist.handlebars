<nav class="nav-wrapper yellow accent-4">
    <a href="/" class="brand-logo center" id="nav-logo">Grocr</a>
    <button class="btn green right" id="logout-btn">LOGOUT</button>
</nav>

<div class="container">
    <div class="file-field input-field">
        <div class="btn">
            <span>Select Receipt</span>
            <input type="file" id="file" name="file">
        </div>
        <div class="file-path-wrapper">
            <input class="file-path validate" type="text">
        </div>
    </div>
    <div class="row">
        <button class="btn center-align" id="ajax-veryfi">Add to List</button>
    </div>
    <div class ="row">
       <image id= "storeLogoUrl"></image> 
    </div>
    <div>
  <p id= "store">Store Visited: </p>
  </div>
<div>
  <ul class= "purchase"> </ul>
</div>
    <div>
      <p id = "total">Total Cost: $</p> 
    </div>

    <div class="row">
        <form class="col s12">
            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">mode_edit</i>
                    <textarea id="icon_prefix2" class="materialize-textarea"></textarea>
                    <label for="icon_prefix2">Add Item to Grocery List</label>
                </div>
            </div>
        </form>
    </div>
        <div class="row" id="list-area">
        <!-- list of current receipt purchases -->
        <div class="col s6">
            <h5>Grocery List</h5>
            <ul>
                {{#each grocery}}
                {{#if purchase}}
                <li>
                    <div class="col s4">
                        <!-- item name -->
                        <p id="purchases">{{this.description}}</p>
                    </div>
                    <div class="col s4">
                        <!-- price -->
                        <p id="current-price">${{this.item_price}}</p>
                    </div>
                    <button class="btn-floating orange btn-small" data-id={{id}}><i class="small material-icons"
                            id="remove-icon">remove</i></button>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
        <!-- list of past items -->
        <div class="col s6">
            <h5>Previously Ordered</h5>
            <ul>
                {{#each grocery}}
                {{#unless purchase}}
                <li>
                    <div class="col s4">
                        <!-- item name -->
                        <p id="previous-item">{{this.description}}</p>
                    </div>
                    <div class="col s4">
                        <p id="previous-price">${{this.item_price}}</p>
                    </div>
                    <button class="btn-floating orange btn-small" data-id={{id}}><i class="small material-icons"
                            id="add-icon">add</i></button>
                    <button class="btn-floating orange btn-small" data-id={{id}}><i class="small material-icons"
                            id="remove-icon">remove</i></button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>
    <script src="/js/grocery-list.js"></script>
    <script src="/js/uploadpic.js"></script>
