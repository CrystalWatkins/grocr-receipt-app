<div class="container">
    <div class="row" id="list-area">
        <!-- list of current receipt purchases -->
        
        <div class="col s6">
            <h5>Grocery List</h5>
            <ul>
                <li>
                    <div class="col s4">
                        <!-- item name -->
                        <p id="purchases">ITEM</p>
                    </div>
                    <div class="col s4">
                        <!-- price -->
                        <p id="current-price">$0.00</p>
                    </div>
                    <button class="btn-floating orange btn-small"><i class="small material-icons"
                            id="move-icon">move</i></button>
                </li>
            </ul>
        </div>
        <!-- list of past items -->
        <div class="col s6">
            <h5>Previously Ordered</h5>
            <div class="col s4">
                <!-- item name -->
                <p id="previous-item">ITEM</p>
            </div>
            <div class="col s4">
                <!-- price -->
                <p id="previous-price">$0.00</p>
            </div>
            <button class="btn-floating orange btn-small"><i class="small material-icons" id="add-icon">add</i></button>
            <button class="btn-floating orange btn-small"><i class="small material-icons"
                    id="remove-icon">remove</i></button>
        </div>
    </div>
</div>
